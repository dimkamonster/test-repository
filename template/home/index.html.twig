{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h3 id="clock"></h3>
        <div>
            <span id="controllerClassName">ClassName is {{ className }}</span>
            <div class="spacer"></div>
            <span id="controllerClassMethod">Called method is {{ methodName }}</span>
        </div>
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td><a href="/trailer/{{ trailer.id }}">{{ trailer.title }}</a></td>
                    <td><img src="{{ trailer.image }}"/></td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <script>
        function updateClock() {
            document.getElementById('clock').innerHTML = new Date().toLocaleString();
        }
        updateClock();
        setInterval(updateClock,1000);
    </script>
{% endblock %}
